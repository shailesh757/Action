@model IEnumerable<JewelOfIndiaBuilder.Models.Visual>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(
    linkText: "Create New",
    actionName: "Create",
    controllerName: "VisualAdmin",
    routeValues: new {
        Type = ViewBag.Type, 
        Id = ViewBag.Id
    },
    htmlAttributes: null
)
    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img width="100px" height="100px" src  ="..\..\images\@Html.DisplayFor(modelItem => item.DisplayName)"/>
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>

                </button>
                
<img src="~/Content/logo.jpg" alt="Jewel of India"/>                @Html.ActionLink(" ", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if  (Session["AuthID"] != null)
                    {
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    
                    <li>@Html.ActionLink("Property", "Index", "PropertyAdmin", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Tower", "Index", "TowerAdmin", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Apartment", "Index", "ApartmentAdmin", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Customer", "Index", "CustomerAdmin", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Location", "Index", "LocationAdmin", new { area = "" }, null)</li>@*
                    <li>@Html.ActionLink("Feature", "Index", "FeatureAdmin", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Feature Type", "Index", "FeatureTypeAdmin", new { area = "" }, null)</li>*@
                    <li>@Html.ActionLink("Property Type", "Index", "PropertyTypeAdmin", new { area = "" }, null)</li>
                        if (Session["IsAdmin"].ToString() == "True")
                        {
                            <li>@Html.ActionLink("User", "Index", "UserAdmin", new { area = "" }, null)</li>
                        }
                    <li>@Html.ActionLink("Log Off", "Logoff", "UserAdmin", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("ChangePassword", "ChangePassword", "UserAdmin", new { area = "" }, null)</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Login", "UserAdmin", new { area = "" }, null)</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Jewel of India</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
